{
  "manifest_version": 3,
  "name": "Aimee Tool Compass",
  "version": "1.0",
  "description": "Display product data in a sortable table with images",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://compass.jinritemai.com/*"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https: data:"
  },
  "web_accessible_resources": [{
    "resources": ["*.json", "*.js", "*.css"],
    "matches": ["<all_urls>"]
  }]
}
